@using Plumbery.UI.MVC.Utilities
<aside class="control-sidebar control-sidebar-dark">
    @* BEGIN Tabs *@
    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
        <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-user-plus"></i></a></li>
        <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
    </ul>
    @* END Tabs *@
    <div class="tab-content">
        @* BEGIN Home Tab *@
        <div class="tab-pane active" id="control-sidebar-home-tab">
            <h3 class="control-sidebar-heading">Users</h3>
            <ul class="sidebar-menu">
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-user-secret"></i> <span>Supervisors</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected("Create","Supervisor")">@Html.ActionLink("Add", "Create", "Supervisor")</li>
                        <li class="@Html.IsSelected("Edit","Supervisor")">@Html.ActionLink("Edit", "Edit", "Supervisor")</li>
                        <li class="@Html.IsSelected("Delete","Supervisor")">@Html.ActionLink("Delete", "Delete", "Supervisor")</li>
                        <li class="@Html.IsSelected("Index","Supervisor")">@Html.ActionLink("List", "Index", "Supervisor")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-tint"></i> <span>Plumbers</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected("Create","Plumber")">@Html.ActionLink("Add", "Create", "Plumber")</li>
                        <li class="@Html.IsSelected("Edit","Plumber")">@Html.ActionLink("Edit", "Edit", "Plumber")</li>
                        <li class="@Html.IsSelected("Delete","Plumber")">@Html.ActionLink("Delete", "Delete", "Plumber")</li>
                        <li class="@Html.IsSelected("Index","Plumber")">@Html.ActionLink("List", "Index", "Plumber")</li>
                    </ul>
                </li>
            </ul>
           
        </div>
        @* END Home Tab *@
        <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
        @* BEGIN Settings Tab *@
        <div class="tab-pane" id="control-sidebar-settings-tab">
            <h3 class="control-sidebar-heading">Time Sheets/Inventories</h3>
            <ul class="sidebar-menu">
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-clock-o"></i> <span>Time Sheet</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected("Create","TimeSheet")">@Html.ActionLink("Add", "Create", "TimeSheet")</li>
                        <li class="@Html.IsSelected("Edit","TimeSheet")">@Html.ActionLink("Edit", "Edit", "TimeSheet")</li>
                        <li class="@Html.IsSelected("Delete","TimeSheet")">@Html.ActionLink("Delete", "Delete", "TimeSheet")</li>
                        <li class="@Html.IsSelected("Index","TimeSheet")">@Html.ActionLink("List", "Index", "TimeSheet")</li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-share-alt-square"></i> <span>Inventory</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected("Create","Inventory")">@Html.ActionLink("Add", "Create", "Inventory")</li>
                        <li class="@Html.IsSelected("Edit","Inventory")">@Html.ActionLink("Edit", "Edit", "Inventory")</li>
                        <li class="@Html.IsSelected("Delete","Inventory")">@Html.ActionLink("Delete", "Delete", "Inventory")</li>
                        <li class="@Html.IsSelected("Index","Inventory")">@Html.ActionLink("List", "ControlIndex", "Inventory")</li>
                    </ul>
                </li>
            </ul>
        </div>
        @* END Settings Tab *@
    </div>
</aside>
@* Add the sidebar's background. This div must be placed immediately after the control sidebar *@
<div class="control-sidebar-bg"></div>